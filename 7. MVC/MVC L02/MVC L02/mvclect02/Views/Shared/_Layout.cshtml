
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
     @* Start Header *@
    <header>
        <center>
            <nav class="mt-5">
                <!-- 1. Static HTML -->
                <a href="/Home/Index" class="btn btn-primary m-2">Home</a>
                @* HTML Helpers: Server side Rasor Tags *@
                @* <a href="/Home/Privacy" class="btn btn-warning m-2">Privacy</a> *@
                @* .NET Framework *@
                @Html.ActionLink(linkText: "Privacy", actionName: "Privacy", controllerName: "Home", htmlAttributes: new {@class="btn btn-warning m-2"}, routeValues: null)
                

                @* <a href="/Home/AboutUs" class="btn btn-success m-2">About Us</a> *@
                <a asp-controller="Home" asp-action="AboutUs" class="btn btn-success m-2">About Us</a>
                <a href="/Home/ContactUs" class="btn btn-secondary m-2">Contact Us</a>
            </nav>
        </center>
    </header>
    @* End Header *@

    <div>
        @RenderBody()
    </div>

    @* Start Footer *@
    <footer>
        <center>
            <div class="mt-3">
                <p>Copyright &copy; Route @DateTime.Now.Year</p>
            </div>
        </center>
    </footer>
    @* End Footer *@
</body>
</html>
